<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Quizzer</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/quiz.css">
    </head>
    <body>
        <div class="holder">
            <h4 id="questionNum">Question <%= quizData.questionId %></h4><br>
            <h5 id="question"><%= quizData.question %> _____________.</h5>
            <form action="/quiz" method="POST">
                <div class="form-check radio">
                    <input class="form-check-input" type="radio" name="options" id="radio1" value="A">
                    <label class="form-check-label" for="radio1" id="optionA"><%= quizData.optionA %></label>
                </div>
                <div class="form-check radio">
                    <input class="form-check-input" type="radio" name="options" id="radio2" value="B">
                    <label class="form-check-label" for="radio2" id="optionB"><%= quizData.optionB %></label>
                </div>
                <div class="form-check radio">
                    <input class="form-check-input" type="radio" name="options" id="radio3" value="C">
                    <label class="form-check-label" for="radio3" id="optionC"><%= quizData.optionC %></label>
                </div>
                <div class="form-check radio">
                    <input class="form-check-input" type="radio" name="options" id="radio4" value="D">
                    <label class="form-check-label" for="radio4" id="optionD"><%= quizData.optionD %></label>
                </div>
                <div style="text-align: right;">
                    <div class="timeholder">
                        <h4 id="time">00:20</h4><br>
                        <hr class="side-hr"><hr class="dot-hr"><hr class="side-hr"><br>
                    </div>
                    <div style="display: block;">    
                        <button type="reset" class="btn button btn-warning btn-lg">Clear</button>
                        <button id="nextButton" type="submit" class="btn button btn-warning btn-lg"><%= button %></button>
                    </div>        
                </div>    
            </form>
        </div>    
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script charset="utf-8">
            var time = 20;
            timer = setInterval(() => {
                time--;
                if (time < 10)
                    $("#time").text("00:0" + time);
                else 
                    $("#time").text("00:" + time);
                if (time == 0) {
                    clearInterval(timer);
                    $("form").submit();
                }    
            }, 1000);        
        </script>
    </body>
</html>